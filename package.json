  "description": "Static pages for GOVUK alerts",
  "engines": {
    "node": "10.15.3"
  },
  "scripts": {
    "lint:scss": "stylelint -i src/assets/stylesheets/_govuk_frontend.scss src/assets/stylesheets/",
