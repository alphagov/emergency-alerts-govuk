{
  "name": "emergency-alerts-govuk",
  "version": "0.0.1",
  "description": "Static pages for GOVUK alerts",
  "engines": {
    "node": ">=22.21.0",
    "npm": ">=10.9.3"
  },
  "scripts": {
    "lint:scss": "stylelint -i app/assets/stylesheets/_govuk_frontend.scss app/assets/stylesheets/ --ip '*.xsl'",
    "lint:js": "standardx app/assets/javascripts/",
    "lint": "npm run lint:scss && npm run lint:js",
    "build": "gulp",
    "test": "jest --config tests/javascripts/jest.config.js",
    "audit": "better-npm-audit audit --production --level high"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/emergency-alerts-govuk.git"
  },
  "author": "Government Digital Service",
  "license": "MIT",
  "homepage": "https://github.com/alphagov/emergency-alerts-govuk#readme",
  "dependencies": {
    "govuk-frontend": "^5.10.2",
    "html5shiv": "^3.7.3",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "better-npm-audit": "^3.7.3",
    "braces": ">=3.0.3",
    "gulp": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sha256-filename": "^2.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "oldie": "^1.3.0",
    "postcss": "^8.4.6",
    "rollup": "^2.67.2",
    "rollup-jest": "^3.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.7",
    "standardx": "^7.0.0",
    "stylelint": "^16.23.1",
    "stylelint-config-gds": "^2.0.0"
  },
  "overrides": {
    "minimist": "1.2.8",
    "@babel/traverse": "7.24.1"
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  },
  "eslintConfig": {
    "rules": {
      "no-var": 0
    }
  }
}
